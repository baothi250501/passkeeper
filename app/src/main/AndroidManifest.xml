<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.passkeeper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Passkeeper"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.record.view.ViewRecordActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".EntranceActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.listGroup.listMemberGroup.ListMemberGroupActivity"
            android:theme="@style/Theme.Passkeeper.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".ui.listGroup.ListGroupActivity"
            android:theme="@style/Theme.Passkeeper.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".ui.shareGroup.ShareGroupActivity"
            android:theme="@style/Theme.Passkeeper.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".ui.shareGroup.listRecordShareGroup.ListRecordShareGroupActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".ui.record.edit.EditRecordActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".ui.record.add.AddRecordActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".ui.login.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".ui.login.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
        <activity
            android:name=".ui.generatePass.GeneratePasswordActivity"
            android:theme="@style/Theme.Passkeeper.NoActionBar" />
    </application>

</manifest>